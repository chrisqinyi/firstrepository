<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_ID" version="2.4"
	xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
	<display-name>Bank Service Over Internet</display-name>
	<description>
        BSOI
    </description>

	<context-param>
		<param-name>webAppRootKey</param-name>
		<param-value>
            bsoi.webroot
        </param-value>
    </context-param>
    <context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>
		    classpath:spring/bsoi-base-context.xml,
			classpath:spring/bsoi-integration-context.xml,
            classpath*:spring/bsoi-*-context.xml,
            classpath*:spring/bsoi-data-mapping.xml,
			/WEB-INF/classes/spring/base-security-context.xml,
			/WEB-INF/classes/spring/ibank-context.xml,
			/WEB-INF/classes/spring/ibank-security-context.xml,
			/WEB-INF/classes/spring/ibank-cache-context.xml,
  			/WEB-INF/classes/spring/base-context.xml,
  			/WEB-INF/classes/spring/ibank-interceptor-context.xml
        </param-value>
	</context-param>

	<filter>
		<filter-name>requestContextFilter</filter-name>
		<filter-class>org.springframework.web.filter.RequestContextFilter</filter-class>
	</filter>
	<filter>
		<filter-name>springSecurityFilterChain</filter-name>
		<filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
	</filter>
	<filter>
		<description>dwrCSRFFilter</description>
		<display-name>dwrCSRFFilter</display-name>
		<filter-name>dwrCSRFFilter</filter-name>
		<filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
		<init-param>
			<param-name>targetBeanName</param-name>
			<param-value>dwrCSRFFilter</param-value>
		</init-param>
	</filter>
	<filter>
		<filter-name>dwrSpringFilter</filter-name>
		<filter-class>com.scb.foa.base.DwrSpringFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>requestContextFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>springSecurityFilterChain</filter-name>
		<url-pattern>/*</url-pattern>
		<dispatcher>REQUEST</dispatcher>    
    	<dispatcher>FORWARD</dispatcher>
	</filter-mapping>
	<filter-mapping>
		<filter-name>dwrCSRFFilter</filter-name>
		<url-pattern>/dwr/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>dwrSpringFilter</filter-name>
		<url-pattern>*.dwr</url-pattern>
	</filter-mapping>
	<!-- Note: spring ContextLoaderListener must be loaded before Log4jConfigListener -->
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>

	<listener>
		<listener-class>org.springframework.security.web.session.HttpSessionEventPublisher</listener-class>
	</listener>
	<mime-mapping>
		<extension>png</extension>
		<mime-type>image/png</mime-type>
	</mime-mapping>
	<mime-mapping>
		<extension>otf</extension>
		<mime-type>application/octet-stream</mime-type>
	</mime-mapping>
	<mime-mapping>
		<extension>eot</extension>
		<mime-type>application/vnd.ms-fontobject</mime-type>
	</mime-mapping>
	<mime-mapping>
		<extension>svg</extension>
		<mime-type>image/svg-xml</mime-type>
	</mime-mapping>
	<mime-mapping>
		<extension>woff</extension>
		<mime-type>application/x-font-woff</mime-type>
	</mime-mapping>
	<mime-mapping>
		<extension>ttf</extension>
		<mime-type>application/octet-stream</mime-type>
	</mime-mapping>

	<session-config>
		<session-timeout>15</session-timeout>
	</session-config>
	<servlet>
		<servlet-name>Sybase365AckServlet</servlet-name>
		<servlet-class>com.scb.nfs.notification.web.servlet.Sybase365AckServlet</servlet-class>						 
	</servlet>
	<servlet>
		<servlet-name>baseStartupServlet</servlet-name>
		<servlet-class>com.scb.nfs.base.helper.BaseStartupServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet>
		<description>Spring MVC Dispatcher Servlet</description>
		<servlet-name>springweb</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<load-on-startup>2</load-on-startup>
	</servlet>
	<servlet>
		<servlet-name>dwr-invoker</servlet-name>
<!-- 		<servlet-class>com.scb.foa.base.DwrSpringServletCustom</servlet-class> -->
		<servlet-class>org.directwebremoting.spring.DwrSpringServlet</servlet-class>
		<init-param>
			<param-name>url:/about</param-name>
			<param-value>org.directwebremoting.servlet.NotFoundHandler</param-value>
		</init-param>
		<init-param>
			<param-name>org.directwebremoting.dwrp.PlainCallMarshaller</param-name>
			<param-value>com.scb.foa.base.PlainCallMarshaller</param-value>
		</init-param>
		<init-param>
             <param-name>crossDomainSessionSecurity</param-name>
             <param-value>false</param-value>
      	</init-param>
		<init-param>
			<param-name>allowScriptTagRemoting</param-name>
			<param-value>true</param-value>
		</init-param>
		<init-param>
	        <param-name>accessLogLevel</param-name>
	        <param-value>CALL</param-value>
	    </init-param>
	    <init-param>
			<param-name>debug</param-name>
			<param-value>false</param-value>
		</init-param>
		<init-param>
		  <param-name>overridePath</param-name>
		  <param-value>https://218.189.41.116/nfs/ibank/je/foa/dwr/dwr-${dwr.version}</param-value>
		</init-param>
	</servlet>
	<servlet-mapping>
		<servlet-name>springweb</servlet-name>
		<url-pattern>/nfs/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>dwr-invoker</servlet-name>
		<url-pattern>/dwr/dwr-${dwr.version}/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
        <servlet-name>Sybase365AckServlet</servlet-name>
        <url-pattern>/Sybase365AckServlet</url-pattern>
    </servlet-mapping>
	<welcome-file-list>
		<welcome-file>
            index.html
        </welcome-file>
	</welcome-file-list>

	<!-- error pages -->
	<error-page>
		<exception-type>java.lang.Throwable</exception-type>
		<location>/nfs/home/error.do</location>
	</error-page>
	<error-page>
		<error-code>500</error-code>
		<location>/nfs/home/error.do</location>
	</error-page>
	<error-page>
		<error-code>503</error-code>
		<location>/nfs/home/error.do</location>
	</error-page>
	<error-page>
		<error-code>501</error-code>
		<location>/nfs/home/error.do</location>
	</error-page>
	<error-page>
		<error-code>403</error-code>
		<location>/nfs/home/error.do</location>
	</error-page>
	<error-page>
		<error-code>401</error-code>
		<location>/nfs/home/error.do</location>
	</error-page>
	<error-page>
		<error-code>404</error-code>
		<location>/nfs/home/error.do</location>
	</error-page>
</web-app>
